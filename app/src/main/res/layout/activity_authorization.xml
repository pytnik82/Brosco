<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/inner_frame">


    <EditText
        android:id="@+id/edt_input_email"
        style="@style/TextStyleInputRegistration"
        android:layout_centerInParent="true"
        android:layout_marginBottom="32dp"
        android:inputType="textEmailAddress"
        android:letterSpacing="0.05" />

    <TextView
        style="@style/TextStyleAboveTheFrame"
        android:layout_above="@id/edt_input_email"
        android:text=" E-mail " />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/edt_input_email"
        android:layout_centerHorizontal="true"
        android:scaleType="center"
        android:src="@drawable/brosco_logo" />

    <EditText
        android:id="@+id/edt_input_password"
        style="@style/TextStyleInputRegistration"
        android:layout_below="@id/edt_input_email"
        android:inputType="textPassword"
        android:letterSpacing="0.05"
        android:paddingRight="40dp" />

    <TextView
        style="@style/TextStyleAboveTheFrame"
        android:layout_above="@id/edt_input_password"
        android:text=" Пароль " />

    <ImageView
        android:id="@+id/imgv_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/edt_input_password"
        android:layout_alignRight="@id/edt_input_password"
        android:layout_alignBottom="@id/edt_input_password"
        android:layout_marginRight="8dp"
        android:src="@drawable/lock" />

    <Switch
        android:id="@+id/switchRemember"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_below="@id/edt_input_password"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/switchRemember"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@id/switchRemember"
        android:text="Запомнить меня"
        android:textColor="@color/gray"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_remember"
        android:layout_alignParentRight="true"
        android:text="@string/forgot_password"
        android:textColor="@color/gray"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/switchRemember"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/frame_boottom_purple"
        android:fontFamily="serif"
        android:gravity="center"
        android:letterSpacing="0.15"
        android:text="Войти"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_login_without_registering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_centerHorizontal="true"
        android:letterSpacing="0.05"
        android:text="@string/enter_without_registration"
        android:textColor="@color/gray"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tv_to_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:letterSpacing="0.05"
        android:text="@string/to_register"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_no_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_to_register"
        android:layout_centerHorizontal="true"
        android:letterSpacing="0.05"
        android:text="@string/no_account"
        android:textColor="@color/gray"
        android:textSize="14sp" />

</RelativeLayout>